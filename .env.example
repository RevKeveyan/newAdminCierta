# ===== MongoDB Configuration =====
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/your-db-name
MONGO_DB_NAME=your-db-name

# ===== AWS S3 Configuration =====
AWS_ACCESS_KEY=your_aws_access_key_id
AWS_SECRET_KEY=your_aws_secret_access_key
AWS_REGION=your_aws_region              # e.g. us-east-1
AWS_BUCKET=your_bucket_name
S3_FOLDER_PREFIX=                       # optional: folder prefix like "cierta/"

# ===== SMTP Email Configuration =====
EMAIL_HOST=smtp.your-provider.com       # e.g. smtp.gmail.com
EMAIL_PORT=465                          # 465 (SSL) or 587 (TLS)
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password
EMAIL_TO=recipient@example.com          # Where to receive support/contact emails

# ===== File Upload Settings =====
UPLOAD_MAX_MB=10
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.pdf,.xlsx,.csv

# ===== Authentication Settings =====
JWT_SECRET=your_jwt_secret_key
RESET_TOKEN_EXPIRE_MINUTES=5
RESET_MAX_ATTEMPTS=3
SUPPORT_CONTACT_EMAIL=support@example.com

# ===== Cron / Scheduler Settings =====
CRON_STATS_REFRESH=0 6 * * *           # every day at 6am

# ===== App Settings =====
NODE_ENV=development
PORT=5000
